{
  "Types d'objets": [
    {
      "type": "int",
      "définition": "Entier.",
      "exemple": "<?php\n  $age = 25;\n  $nombre = -10;\n  echo $age;\n?>"
    },
    {
      "type": "float",
      "définition": "Réel.",
      "exemple": "<?php\n  $prix = 19.99;\n  $temperature = -5.5;\n  echo $prix;\n?>"
    },
    {
      "type": "string",
      "définition": "Chaîne de caractères.",
      "exemple": "<?php\n  $nom = 'Ahmed';\n  $prenom = \"Ali\";\n  echo $nom . ' ' . $prenom;\n?>"
    },
    {
      "type": "bool",
      "définition": "Booléen.",
      "exemple": "<?php\n  $estConnecte = true;\n  $estValide = false;\n  if ($estConnecte) {\n    echo 'Connecté';\n  }\n?>"
    },
    {
      "type": "array",
      "définition": "Tableau.",
      "exemple": "<?php\n  $fruits = array('Pomme', 'Banane', 'Orange');\n  echo $fruits[0];\n  $notes = array('Math' => 15, 'Info' => 18);\n  echo $notes['Math'];\n?>"
    }
  ],
  "Opérateurs de transtypage": [
    {
      "opérateur": "(int)",
      "définition": "Convertit une variable en entier.",
      "exemple": "<?php\n  $texte = '42';\n  $nombre = (int)$texte;\n  echo $nombre + 8;\n?>"
    },
    {
      "opérateur": "(float)",
      "définition": "Convertit une variable en réel.",
      "exemple": "<?php\n  $texte = '19.99';\n  $prix = (float)$texte;\n  echo $prix;\n?>"
    },
    {
      "opérateur": "(string)",
      "définition": "Convertit une variable en chaîne.",
      "exemple": "<?php\n  $nombre = 123;\n  $texte = (string)$nombre;\n  echo $texte . ' euros';\n?>"
    },
    {
      "opérateur": "(bool)",
      "définition": "Convertit une variable en booléen.",
      "exemple": "<?php\n  $nombre = 0;\n  $booleen = (bool)$nombre;\n  var_dump($booleen);\n?>"
    },
    {
      "opérateur": "(array)",
      "définition": "Convertit une variable en tableau.",
      "exemple": "<?php\n  $valeur = 'test';\n  $tableau = (array)$valeur;\n  print_r($tableau);\n?>"
    }
  ],
  "Opérateurs logiques": [
    {
      "opérateur": "&&",
      "définition": "ET logique.",
      "exemple": "<?php\n  $age = 20;\n  if ($age >= 18 && $age < 65) {\n    echo 'Adulte';\n  }\n?>"
    },
    {
      "opérateur": "||",
      "définition": "OU logique.",
      "exemple": "<?php\n  $jour = 'samedi';\n  if ($jour == 'samedi' || $jour == 'dimanche') {\n    echo 'Weekend';\n  }\n?>"
    },
    {
      "opérateur": "!",
      "définition": "NON logique.",
      "exemple": "<?php\n  $connecte = false;\n  if (!$connecte) {\n    echo 'Veuillez vous connecter';\n  }\n?>"
    }
  ],
  "Opérateurs de comparaison": [
    {
      "opérateur": "==",
      "définition": "Égal à.",
      "exemple": "<?php\n  $age = 18;\n  if ($age == 18) {\n    echo 'Vous avez exactement 18 ans';\n  }\n?>"
    },
    {
      "opérateur": "!=",
      "définition": "Différent de.",
      "exemple": "<?php\n  $nom = 'Ahmed';\n  if ($nom != 'Ali') {\n    echo 'Nom différent';\n  }\n?>"
    },
    {
      "opérateur": "<",
      "définition": "Inférieur à.",
      "exemple": "<?php\n  $note = 8;\n  if ($note < 10) {\n    echo 'Non admis';\n  }\n?>"
    },
    {
      "opérateur": "<=",
      "définition": "Inférieur ou égal à.",
      "exemple": "<?php\n  $stock = 5;\n  if ($stock <= 10) {\n    echo 'Stock faible';\n  }\n?>"
    },
    {
      "opérateur": ">",
      "définition": "Supérieur à.",
      "exemple": "<?php\n  $temperature = 35;\n  if ($temperature > 30) {\n    echo 'Il fait chaud';\n  }\n?>"
    },
    {
      "opérateur": ">=",
      "définition": "Supérieur ou égal à.",
      "exemple": "<?php\n  $score = 50;\n  if ($score >= 50) {\n    echo 'Réussi';\n  }\n?>"
    }
  ],
  "Opérateurs arithmétiques": [
    {
      "opérateur": "+",
      "définition": "Addition.",
      "exemple": "<?php\n  $a = 10;\n  $b = 5;\n  $somme = $a + $b;\n  echo $somme;\n?>"
    },
    {
      "opérateur": "-",
      "définition": "Soustraction.",
      "exemple": "<?php\n  $difference = 20 - 7;\n  echo $difference;\n?>"
    },
    {
      "opérateur": "*",
      "définition": "Multiplication.",
      "exemple": "<?php\n  $produit = 6 * 8;\n  echo $produit;\n?>"
    },
    {
      "opérateur": "/",
      "définition": "Division.",
      "exemple": "<?php\n  $quotient = 20 / 4;\n  echo $quotient;\n?>"
    },
    {
      "opérateur": "%",
      "définition": "Modulo (reste de la division euclidienne).",
      "exemple": "<?php\n  $reste = 17 % 5;\n  echo $reste;\n  // Vérifier si pair\n  if ($nombre % 2 == 0) {\n    echo 'Pair';\n  }\n?>"
    }
  ],
  "Autres opérateurs": [
    {
      "opérateur": "=",
      "définition": "Affectation.",
      "exemple": "<?php\n  $nom = 'Ahmed';\n  $age = 25;\n  $actif = true;\n?>"
    },
    {
      "opérateur": ".",
      "définition": "Concaténation.",
      "exemple": "<?php\n  $prenom = 'Ahmed';\n  $nom = 'Ben Ali';\n  $complet = $prenom . ' ' . $nom;\n  echo $complet;\n?>"
    }
  ],
