    },
    {
      "variable": "$_POST",
      "définition": "Tableau associatif des valeurs passées au script courant via le protocole HTTP et la méthode POST.",
      "exemple": "<?php\n  if ($_POST['nom']) {\n    $nom = $_POST['nom'];\n    $email = $_POST['email'];\n    echo 'Bonjour ' . $nom;\n  }\n?>"
    }
  ],
