    }
  ],
  "Structures de langage": [
    {
      "fonction": "echo",
      "définition": "Affiche une ou plusieurs expressions.",
      "exemple": "<?php\n  echo 'Bonjour le monde!';\n  echo '<h1>Titre</h1>';\n  $nom = 'Ahmed';\n  echo 'Bonjour ' . $nom;\n?>"
    }
  ],
  "Fonctions PHP pour MySQL": [
    {
      "fonction": "mysqli_connect()",
      "définition": "Établir une connexion à une base de données MySQL.",
      "exemple": "<?php\n  $conn = mysqli_connect('localhost', 'user', 'password', 'database');\n  if (!$conn) {\n    die('Connexion échouée: ' . mysqli_connect_error());\n  }\n  echo 'Connecté';\n?>"
    },
    {
      "fonction": "mysqli_query()",
      "définition": "Envoie une requête SQL à la base de données.",
      "exemple": "<?php\n  $sql = 'SELECT * FROM etudiants';\n  $result = mysqli_query($conn, $sql);\n?>"
    },
    {
      "fonction": "mysqli_close()",
      "définition": "Ferme la connexion à la base de données.",
      "exemple": "<?php\n  mysqli_close($conn);\n  echo 'Connexion fermée';\n?>"
    },
    {
      "fonction": "mysqli_fetch_array()",
      "définition": "Retourne une ligne de résultat sous forme de tableau associatif et numérique.",
      "exemple": "<?php\n  while ($row = mysqli_fetch_array($result)) {\n    echo $row['nom'] . ' ' . $row['prenom'];\n  }\n?>"
    },
    {
      "fonction": "mysqli_fetch_row()",
      "définition": "Retourne une ligne de résultat sous forme de tableau indexé numériquement.",
      "exemple": "<?php\n  while ($row = mysqli_fetch_row($result)) {\n    echo $row[0] . ' ' . $row[1];\n  }\n?>"
    },
    {
      "fonction": "mysqli_num_rows()",
      "définition": "Retourne le nombre de lignes dans un résultat de requête.",
      "exemple": "<?php\n  $nombre = mysqli_num_rows($result);\n  echo 'Nombre de résultats: ' . $nombre;\n?>"
    },
    {
      "fonction": "mysqli_affected_rows()",
      "définition": "Retourne le nombre de lignes affectées par la dernière requête SQL exécutée.",
      "exemple": "<?php\n  $sql = 'UPDATE etudiants SET age = 21 WHERE id = 1';\n  mysqli_query($conn, $sql);\n  echo mysqli_affected_rows($conn) . ' lignes modifiées';\n?>"
    },
    {
      "fonction": "mysqli_error()",
      "définition": "Retourne un message d'erreur généré par la dernière requête SQL exécutée.",
      "exemple": "<?php\n  $result = mysqli_query($conn, $sql);\n  if (!$result) {\n    echo 'Erreur: ' . mysqli_error($conn);\n  }\n?>"
    }
  ],
  "Variables superglobales": [
    {
