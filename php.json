    },
    {
      "fonction": "ord()",
      "définition": "Retourne le code ASCII du 1er caractère de l'argument.",
      "exemple": "<?php\n  $code = ord('A');\n  echo $code;\n?>"
    },
    {
      "fonction": "strlen()",
      "définition": "Retourne la longueur d'une chaîne.",
      "exemple": "<?php\n  $texte = 'Bonjour';\n  $longueur = strlen($texte);\n  echo $longueur;\n?>"
    },
    {
      "fonction": "substr()",
      "définition": "Retourne une sous-chaîne.",
      "exemple": "<?php\n  $texte = 'Bonjour';\n  $sous = substr($texte, 0, 3);\n  echo $sous;\n?>"
    },
    {
      "fonction": "strpos()",
      "définition": "Retourne la position de la première occurrence du 2ème argument dans le 1er.",
      "exemple": "<?php\n  $texte = 'Bonjour le monde';\n  $position = strpos($texte, 'monde');\n  echo $position;\n?>"
    },
    {
      "fonction": "strcmp()",
      "définition": "Retourne le résultat de comparaison de deux chaînes (<0, 0, >0).",
      "exemple": "<?php\n  $resultat = strcmp('abc', 'def');\n  echo $resultat;\n?>"
    },
    {
      "fonction": "str_replace()",
      "définition": "Remplace, dans une chaîne, toutes les occurrences d'un motif par un autre.",
      "exemple": "<?php\n  $texte = 'Bonjour le monde';\n  $nouveau = str_replace('monde', 'tous', $texte);\n  echo $nouveau;\n?>"
    },
    {
      "fonction": "strtolower()",
      "définition": "Convertit tous les caractères d'une chaîne en minuscule.",
      "exemple": "<?php\n  $texte = 'BONJOUR';\n  $minuscule = strtolower($texte);\n  echo $minuscule;\n?>"
    },
    {
      "fonction": "strtoupper()",
      "définition": "Convertit tous les caractères d'une chaîne en majuscule.",
      "exemple": "<?php\n  $texte = 'bonjour';\n  $majuscule = strtoupper($texte);\n  echo $majuscule;\n?>"
    },
    {
      "fonction": "trim()",
      "définition": "Supprime tous les espaces existants au début et à la fin de la chaîne.",
      "exemple": "<?php\n  $texte = '  Bonjour  ';\n  $nettoye = trim($texte);\n  echo $nettoye;\n?>"
    }
  ],
