      "exemple": "<?php\n  $racine = sqrt(16);\n  echo $racine;\n?>"
    },
    {
      "fonction": "round()",
      "définition": "Retourne la valeur arrondie.",
      "exemple": "<?php\n  $arrondi = round(4.7);\n  echo $arrondi;\n?>"
    },
    {
      "fonction": "rand()",
      "définition": "Retourne un nombre aléatoire.",
      "exemple": "<?php\n  // Nombre aléatoire entre 1 et 10\n  $nombre = rand(1, 10);\n  echo $nombre;\n?>"
