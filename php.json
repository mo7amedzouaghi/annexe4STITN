    },
    {
      "fonction": "time()",
      "définition": "Retourne l'heure actuelle en nombre de secondes.",
      "exemple": "<?php\n  $timestamp = time();\n  echo $timestamp;\n?>"
    },
    {
      "fonction": "strtotime()",
      "définition": "Transforme une chaîne contenant une date en timestamp.",
      "exemple": "<?php\n  $timestamp = strtotime('2024-11-19');\n  echo date('d/m/Y', $timestamp);\n?>"
